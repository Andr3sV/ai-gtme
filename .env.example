# Root / shared (copy to apps/backoffice/.env.local and apps/agent-service/.env as needed)

# Supabase (backoffice)
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...
# Direct Postgres (Drizzle migrations and server). Use Supabase connection string.
DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Inngest (backoffice)
INNGEST_SIGNING_KEY=
INNGEST_EVENT_KEY=

# Agent service URL (backoffice calls this)
AGENT_SERVICE_URL=http://localhost:8000

# Vertex AI / Gemini (agent-service)
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=

# LangSmith (agent-service)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=gtme-agents
LANGCHAIN_API_KEY=

# SerpAPI (agent-service)
SERPAPI_API_KEY=

# Allowed email domain for auth (backoffice)
ALLOWED_EMAIL_DOMAIN=plinng.com
